<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/purpleLight"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editOldMaster"
        android:hint="Старый мастер-пароль"
        android:inputType="textPassword"
        android:textColor="@color/purplePrimaryDark"
        android:backgroundTint="@color/purplePrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/editNewMaster"
        android:hint="New master password"
        android:inputType="textPassword"
        android:textColor="@color/purplePrimaryDark"
        android:backgroundTint="@color/purplePrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnChangeMaster"
        android:text="Change master password"
        android:textColor="@color/white"
        android:backgroundTint="@color/purplePrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"/>

    <EditText
        android:id="@+id/editMaster"
        android:hint="Current master password"
        android:inputType="textPassword"
        android:textColor="@color/purplePrimaryDark"
        android:backgroundTint="@color/purplePrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"/>

    <CheckBox
        android:id="@+id/chkShowMaster"
        android:text="Show master password"
        android:textColor="@color/purplePrimaryDark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"/>

    <Button
        android:id="@+id/btnLogin"
        android:text="Sign In"
        android:textColor="@color/white"
        android:backgroundTint="@color/purplePrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"/>
</LinearLayout>
